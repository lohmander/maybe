{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "sourceMap": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "src/**/*.stories.ts",
    "src/**/*.stories.tsx"
  ]
}
